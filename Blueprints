// For the platform, compile everything except the carrier to phone number
// which isn't used.
libphonenumber_platform_resource_dirs = [
    "libphonenumber/src",
    "geocoder/src",
    "internal/prefixmapper/src",
]

libphonenumber_platform_src_files = [
    "libphonenumber/src/**/*.java",
    "geocoder/src/**/*.java",
    "internal/prefixmapper/src/**/*.java",
]

libphonenumber_src_files = libphonenumber_platform_src_files + ["carrier/src/**/*.java"]

libphonenumber_resource_dirs = libphonenumber_platform_resource_dirs + ["carrier/src"]

// For platform use, builds directly against core-libart to avoid circular
// dependencies. *NOT* for unbundled use.
java_library_static {
    name: "libphonenumber-platform",
    tags: ["optional"],
    srcs: libphonenumber_platform_src_files,
    resource_dirs: libphonenumber_platform_resource_dirs,
    jarjar_rules: "jarjar-rules.txt",

    no_standard_libraries: true,
    java_libs: ["core-libart"],
}

// For unbundled use, supports gingerbread and up.
java_library_static {
    name: "libphonenumber",
    tags: ["optional"],
    srcs: libphonenumber_src_files,
    resource_dirs: libphonenumber_resource_dirs,
    sdk_version: "9",
}
